<?xml version="1.0" encoding="utf-8"?>
<selector android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient

                android:endColor="#FF8C00"
                android:startColor="#FF4500"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#2F4F4F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient

                android:endColor="#4169E1"
                android:startColor="#B0E0E6"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#2F4F4F" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ff0000"
                android:endColor="#1f0000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2F4F4F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>